@model SkinCare.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">
    <div class="admin-section">
        <h1 class="h3 mb-4">Delete Category</h1>
        
        <div class="alert alert-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Are you sure you want to delete this category?
            @if (Model.Products.Any())
            {
                <div class="mt-2">
                    <strong>Warning:</strong> This category contains @Model.Products.Count product(s). Deleting it may affect these products.
                </div>
            }
        </div>
        
        <div class="card mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Name:</div>
                    <div class="col-md-9">@Model.Name</div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Description:</div>
                    <div class="col-md-9">@Model.Description</div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Product Count:</div>
                    <div class="col-md-9">@Model.Products.Count</div>
                </div>
            </div>
        </div>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
