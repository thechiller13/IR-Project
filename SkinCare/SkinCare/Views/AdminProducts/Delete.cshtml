@model SkinCare.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-4">
    <div class="admin-section">
        <h1 class="h3 mb-4">Delete Product</h1>
        
        <div class="alert alert-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Are you sure you want to delete this product?
        </div>
        
        <div class="row">
            <div class="col-md-4 text-center mb-4 mb-md-0">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 250px;" alt="@Model.Name" />
                }
                else
                {
                    <div class="product-placeholder img-fluid rounded" style="max-height: 250px; height: 250px; width: 100%;"></div>
                }
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Name:</div>
                            <div class="col-md-9">@Model.Name</div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Category:</div>
                            <div class="col-md-9">@Model.Category.Name</div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Price:</div>
                            <div class="col-md-9">$@Model.Price.ToString("0.00")</div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Stock:</div>
                            <div class="col-md-9">@Model.Stock</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
